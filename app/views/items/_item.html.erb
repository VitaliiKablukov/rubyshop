
<div class="col" id="<%= dom_id item %>">

          <div class="card shadow-sm">


          <div class="card-body">
            <p class="card-text">
              <strong>Name:</strong>
              <%= item.Name %>
            </p>
            <p class="card-text">
              <strong>Description:</strong>
              <%= item.Description %>
            </p>
            <p class="card-text">
              <strong>Price:</strong>
              <%= item.price %>
            </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to  item do%>
                  <button type="button" class="btn btn-sm btn-outline-secondary mr-5">View</button>
                  <%end%>
                  </div  >
                  <%- if user_signed_in? %>
<%= form_tag(add_to_cart_path, method: :post, ) do %>
                  <%= label_tag(:quantity, "quantity:") %>
                  <%= number_field_tag(:quantity, 1, min: 1) %>
                  <%= hidden_field_tag(:price, item.price)%>
                   <%= hidden_field_tag(:itemId, item.id)%>

                  <%= submit_tag("Add to basket") %>
<% end %>
<%end%>

                  </div>
                </div>
                <small class="text-body-secondary">9 mins</small>

              </div>

            </div>







